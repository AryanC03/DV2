{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Symbol Map of Disasters in Australia",
  "autosize": {
    "type": "fit-x",
    "contains": "padding"
  },
  "background": "transparent",
  "width": "container",
  "height": 500,
  "title": {
    "text": "Major Disaster Events in Australia",
    "color": "white"
  },
  "params": [
    {
      "name": "Zoom",
      "value": 1000,
      "bind": {
                "input": "range",
                "min": 600,
                "max": 3000,
                "step": 50,
                "name": "Zoom: "
            }
    },
    {
      "name": "DisasterType",
      "value": "All",
      "bind": {
        "input": "select",
        "options": [
          "All",
          "Bushfire",
          "Flood",
          "Storm",
          "Earthquake",
          "Cyclone"
        ],
        "name": "Disaster Type: "
      }
    },
    {
      "name": "centre_to",
      "value": [
        133,
        -27
      ]
    },
    {
      "name": "StateFilter",
      "value": "Australia"
    }
  ],
  "projection": {
    "type": "mercator",
    "center": {
      "expr": "centre_to"
    },
    "scale": {
      "expr": "Zoom"
    }
  },
  "layer": [
    {
      "data": {
        "url": "data/au.json",
        "format": {
          "type": "topojson",
          "feature": "au"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#cebbbb",
        "stroke": "#000000",
        "strokeWidth": 0.8
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
        "format": {
          "type": "topojson",
          "feature": "oceans"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "skyblue"
      }
    },
    {
      "data": {
        "url": "data/disasters.csv",
        "format": {
          "type": "csv",
          "parse": {
            "Latitude": "number",
            "Longitude": "number",
            "Fatalities": "number",
            "Injuries": "number",
            "InsuredCostMillions": "number",
            "Year": "number",
            "Month": "number"
          }
        }
      },
      "transform": [
        {
          "calculate": "datum.Fatalities != null ? datum.Fatalities : (datum.Injuries != null ? datum.Injuries : (datum.InsuredCostMillions != null ? datum.InsuredCostMillions / 1000000 : 1))",
          "as": "Impact"
        },
        {
          "calculate": "log(1 + datum.Impact)",
          "as": "NormalizedImpact"
        },
        {
          "filter": "isValid(datum.Latitude) && isValid(datum.Longitude)"
        },
        {
          "filter": "isValid(datum.Impact)"
        },
        {
          "filter": "DisasterType == 'All' || datum.DisasterType == DisasterType"
        },
        {
          "filter": "StateFilter == 'Australia' || datum.State == StateFilter"
        }
      ],
      "mark": {
        "type": "circle",
        "opacity": 0.8,
        "stroke": "#ffffff",
        "strokeWidth": 0.5
      },
      "encoding": {
        "longitude": {
          "field": "Longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "Latitude",
          "type": "quantitative"
        },
        "size": {
          "field": "NormalizedImpact",
          "type": "quantitative",
          "title": "Impact score (log scale)",
          "scale": {
            "range": [
              40,
              400
            ]
          },
          "legend": {
            "orient": "bottom",
            "direction": "horizontal",
            "labelColor": "white",
            "titleColor": "white"
          }
        },
        "color": {
          "field": "DisasterType",
          "type": "nominal",
          "title": "Disaster type",
          "scale": {
            "domain": [
              "Bushfire",
              "Flood",
              "Storm",
              "Earthquake",
              "Cyclone"
            ],
            "range": [
              "#d95f02",
              "#1f78b4",
              "#2ca9b6",
              "#8c510a",
              "#6a3d9a"
            ]
          },
          "legend": {
            "orient": "bottom",
            "direction": "horizontal",
            "labelColor": "white",
            "titleColor": "white"
          }
        },
        "tooltip": [
          {
            "field": "EventName",
            "type": "nominal",
            "title": "Event"
          },
          {
            "field": "City",
            "type": "nominal"
          },
          {
            "field": "State",
            "type": "nominal"
          },
          {
            "field": "DisasterType",
            "type": "nominal",
            "title": "Type"
          },
          {
            "field": "Year",
            "type": "quantitative"
          },
          {
            "field": "Fatalities",
            "type": "quantitative"
          },
          {
            "field": "Injuries",
            "type": "quantitative"
          },
          {
            "field": "InsuredCostMillions",
            "type": "quantitative",
            "title": "Insured cost"
          }
        ]
      }
    }
  ]
}