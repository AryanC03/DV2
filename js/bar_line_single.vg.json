{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Disaster counts (bars) and GSP growth (line) for a selected state.",
  "autosize": {
    "type": "fit-x",
    "contains": "padding"
  },
  "title": "Disasters and GSP Growth Over Time",
  "padding": 5,
  "width": 650,
  "height": 320,
  "data": {
    "url": "data/disasters.csv",
    "format": {
      "type": "csv",
      "parse": {
        "State": "string",
        "Year": "number"
      }
    }
  },
  "params": [
    {
      "name": "selectedState",
      "value": "Victoria",
      "bind": {
        "input": "select",
        "options": [
          "New South Wales",
          "Victoria",
          "Queensland",
          "South Australia",
          "Western Australia",
          "Tasmania",
          "Northern Territory",
          "Australian Capital Territory"
        ],
        "labels": [
          "New South Wales",
          "Victoria",
          "Queensland",
          "South Australia",
          "Western Australia",
          "Tasmania",
          "Northern Territory",
          "Australian Capital Territory"
        ],
        "name": "Select State: "
      }
    }
  ],
  "transform": [
    {
      "filter": "isValid(datum.State) && datum.State !== '' && isValid(datum.Year)"
    },
    {
      "filter": "datum.State == selectedState"
    },
    {
      "aggregate": [
        {
          "op": "count",
          "as": "DisasterCount"
        }
      ],
      "groupby": [
        "State",
        "Year"
      ]
    },
    {
      "calculate": "datum.State + '_' + datum.Year",
      "as": "state_year"
    },
    {
      "lookup": "state_year",
      "from": {
        "data": {
          "url": "data/gsp.csv",
          "format": {
            "type": "csv",
            "parse": {
              "state_year": "string",
              "GSPGrowthPercent": "number"
            }
          }
        },
        "key": "state_year",
        "fields": [
          "GSPGrowthPercent"
        ]
      }
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "bar",
        "color": "#1f77b4"
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal",
          "sort": "ascending",
          "axis": {
            "title": "Year",
            "labelAngle": -45
          }
        },
        "y": {
          "field": "DisasterCount",
          "type": "quantitative",
          "axis": {
            "title": "Disasters"
          }
        },
        "tooltip": [
          {
            "field": "State",
            "type": "nominal",
            "title": "State"
          },
          {
            "field": "Year",
            "type": "ordinal",
            "title": "Year"
          },
          {
            "field": "DisasterCount",
            "type": "quantitative",
            "title": "Disasters"
          },
          {
            "field": "GSPGrowthPercent",
            "type": "quantitative",
            "title": "GSP growth (%)",
            "format": ".2f"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "line",
        "color": "#d62728",
        "strokeWidth": 2,
        "point": false
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal",
          "sort": "ascending"
        },
        "y": {
          "field": "GSPGrowthPercent",
          "type": "quantitative",
          "axis": {
            "title": "GSP growth (%)",
            "orient": "right"
          }
        }
      }
    }
  ],
  "resolve": {
    "scale": {
      "y": "independent"
    }
  }
}
