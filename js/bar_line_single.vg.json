{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Disaster counts (bars) and GSP growth (line) for a selected state.",
  "autosize": {
    "type": "fit-x",
    "contains": "padding"
  },
  "title": {
    "text": "Disasters and GSP Growth Over Time",
    "color": "white"
  },
  "padding": 5,
  "background": "transparent",
  "width": 650,
  "height": 375,
  "data": {
    "url": "data/gsp.csv",
    "format": {
      "type": "csv",
      "parse": {
        "State": "string",
        "Year": "number",
        "GSPGrowthPercent": "number"
      }
    }
  },
  "params": [
    {
      "name": "selectedState",
      "value": "Victoria",
      "bind": {
        "input": "select",
        "options": [
          "New South Wales",
          "Victoria",
          "Queensland",
          "South Australia",
          "Western Australia",
          "Tasmania",
          "Northern Territory",
          "Australian Capital Territory"
        ],
        "labels": [
          "New South Wales",
          "Victoria",
          "Queensland",
          "South Australia",
          "Western Australia",
          "Tasmania",
          "Northern Territory",
          "Australian Capital Territory"
        ],
        "name": "Select State: "
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.Year >= 1990 && datum.Year <= 2024"
    },
    {
      "filter": "datum.State == selectedState"
    }
  ],
  "layer": [
    {
      "data": {
        "url": "data/disasters.csv",
        "format": {
          "type": "csv",
          "parse": {
            "State": "string",
            "Year": "number"
          }
        }
      },
      "transform": [
        {
          "filter": "datum.Year >= 1990 && datum.Year <= 2024"
        },
        {
          "filter": "datum.State == selectedState"
        }
      ],
      "mark": {
        "type": "bar",
        "color": "#454545"
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal",
          "sort": "ascending",
          "axis": {
            "title": "Year",
            "labelAngle": -45,
            "tickColor": "white",
            "labelColor": "white",
            "titleColor": "white"
          }
        },
        "y": {
          "aggregate": "count",
          "type": "quantitative",
          "axis": {
            "title": "Disasters",
            "tickColor": "white",
            "labelColor": "white",
            "titleColor": "white",
            "tickCount": 5,
            "tickMinStep": 1
          }
        },
        "tooltip": [
          {
            "field": "State",
            "type": "nominal",
            "title": "State"
          },
          {
            "field": "Year",
            "type": "ordinal",
            "title": "Year"
          },
          {
            "aggregate": "count",
            "type": "quantitative",
            "title": "Disasters"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "line",
        "color": "#2ca02c",
        "strokeWidth": 2,
        "point": false
      },
      "encoding": {
        "x": {
          "field": "Year",
          "type": "ordinal",
          "sort": "ascending"
        },
        "y": {
          "field": "GSPGrowthPercent",
          "type": "quantitative",
          "axis": {
            "title": "GSP growth (%)",
            "orient": "right",
            "tickColor": "white",
            "labelColor": "white",
            "titleColor": "white"
          }
        },
        "tooltip": [
          {
          "field": "GSPGrowthPercent",
          "type": "quantitative",
          "title": "GSP Growth (%)",
          "format": ".2f"
          }
        ]
      }
    }
  ],
  "resolve": {
    "scale": {
      "y": "independent"
    }
  }
}